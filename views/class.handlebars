{{! Table displaying all class info }}
<h3>Class Index</h3>
<table>
    <thead> 
        <th>ID</th> 
        <th>Title</th> 
        <th>Danger Level</th> 
		<th>Description</th>
        <th></th> 
    </thead> 
    <tbody>
        {{#each class}} 
        <tr> 
            <td>{{this.class_id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.danger_level}}</td>
            <td>{{this.description}}</td> 

            {{! Deletes the corresponding class on click }}
            <td><button id="delete_button" onclick="deleteClass({{this.class_id}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table>

<hr>

<h3>Manage Classes</h3>

{{! Form to add a class }}
<h4 class="header">Add Class</h4>
<form id="add_class" method="POST" action="/class"> 
    <div class="input">
        <label for="title">Title: </label>
        <input type="text" name="title">
    </div>
    <div class="dropdown">
        <label for="danger_level">Danger level:</label>
        <select name="danger_level">
            <option value="Apprentice">Apprentice</option>
            <option value="Adept">Adept</option>
            <option value="Expert">Expert</option>
            <option value="Legendary">Legendary</option>
            <option value="Zenith">Zenith</option>
        </select>
    </div>
    <div class="description">
        <label for="description">Description:</label>
        <textarea name="description" rows="3" cols="80"></textarea> 
    </div>
    <input type="submit" value="Submit">
</form>
